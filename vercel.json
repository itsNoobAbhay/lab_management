{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/index.js" },
    { "src": "/styles/(.*)", "dest": "/public/styles/$1" },
    { "src": "/images/(.*)", "dest": "/public/images/$1" },
    { "src": "/timetable.json", "dest": "/timetable.json" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
